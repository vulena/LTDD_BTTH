<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".List">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_thongtin"
            android:layout_width="306dp"
            android:layout_height="93dp"
            android:background="@drawable/colorgradi"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Vũ Lê Na\n2050531200234"
            android:textColor="@color/teal_700"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/edt_them"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_thongtin"
            android:layout_marginTop="2dp"
            android:hint="Nhập món bạn yêu thích "
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_hint"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/edt_them"
            android:layout_marginTop="3dp"

            android:hint="Nhập giá"
            android:textSize="20dp" />

        <Button
            android:id="@+id/bt_them"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edt_hint"
            android:background="@color/teal_700"
            android:fontFamily="sans-serif-black"
            android:text="Thêm"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bt_them"
            android:layout_marginTop="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="101dp"
            android:layout_height="93dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="6dp"
            android:background="@drawable/colorgradi"
            app:srcCompat="@drawable/restaurant" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>